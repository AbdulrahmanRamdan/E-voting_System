
@{
    ViewBag.Title = "adminLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>تسجيل الدخول</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/adminLoginSS.css">
</head>
<body>

    <div align="right">
        <img src="~/Imgs/admin.png" alt="admin" class="adminImg">
    </div>


    <form method="post" class="needs-validation"  name="form3">
        <h2 style="text-align:right; margin-top:50px; margin-bottom:40px;">تسجيل الدخول لإدارة الموقع </h2>
        <div class="form-group">
            <div align="right">
                <label for="usr">اسم المستخدم</label>
                <input type="text" class="form-control" id="usr" name="user" placeholder="ادخل اسم المستخدم" style="text-align:right" required>
                <div class="invalid-feedback">
                    .من فضلك ادخل اسم المستخدم
                </div>
                <div class="valid-feedback">
                    حسناً!
                </div>
            </div>
        </div>
        <div class="form-group">
            <div align="right">
                <label for="exampleInputPassword1">كلمة السر</label>
                <input type="password" class="form-control" name="pass" id="exampleInputPassword1" placeholder="ادخل كلمة السر" style="text-align:right" required>
                <div class="invalid-feedback">
                    .من فضلك ادخل كلمة السر
                </div>
                <div class="valid-feedback">
                    حسناً!
                </div>
            </div>
        </div>
        <div align="right" style="margin-bottom:15%;">
            <button type="submit" class="btn btn-success" onclick="myFunction3()">الدخول</button>
        </div>

    </form>
    <script>
        function myFunction3() {


            var user = document.forms["form3"]["user"].value;
            var pass = document.forms["form3"]["pass"].value;



            //  var empt = document.forms["form1"]["email"].value;
            if (user == "" || pass == "" ) {
                alert("من فضلك، تأأكد من ملئ جميع البيانات.");
                return false;
            }
            else {
            @("window.location.href='" + @Url.Action("homeAdmin", "admin") + "'");
                return true;
            }
    </script>

</body>
